{
  "name": "prosper",
  "version": "1.0.0",
  "description": "",
  "main": "tailwind.config.js",
  "scripts": {
    "build": "postcss src/style.css -o src/index.css --env production && npm run copy",
    "serve": "npm run build && npm-run-all --parallel watch:styles serve:dev",
    "watch:styles": "nodemon --watch src/style.css --watch src/index.html --watch src/article.html --exec \"npm run build\"",
    "serve:dev": "browser-sync start --server 'src' --files 'src/index.css, src/index.html, src/article.html'",
    "copy": "cp -r ./src/index.html ./dist/index.html && cp -r ./src/article.html ./dist/article.html && cp -r ./src/app.js ./dist/app.js && cp -r ./src/index.css ./dist/index.css && cp -r ./src/assets ./dist",
    "deploy": "gh-pages -d dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "browser-sync": "^3.0.4",
    "cssnano": "^7.1.2",
    "gh-pages": "^6.3.0",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18"
  }
}
